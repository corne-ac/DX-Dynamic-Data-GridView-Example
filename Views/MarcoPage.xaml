<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DX_test_app.ViewModels"
             xmlns:dxg="clr-namespace:DevExpress.Maui.DataGrid;assembly=DevExpress.Maui.DataGrid"
             x:Class="DX_test_app.Views.MarcoPage"
             Title="MarcoPage">

    <!-- Bind the Page's BindingContext to the ViewModel -->
    <!---XAML Setup for Dynamic Grids:
             In MarcoPage.xaml, we defined the binding context and set up a scrollable StackLayout (dataGridStackLayout). 
            This layout acted as a container for the DataGridViews we added dynamically in the code-behind.-->

    <ContentPage.BindingContext>
        <viewmodel:MarcoPageViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout x:Name="dataGridStackLayout">
            <!-- Data grids will be added here dynamically -->
        </StackLayout>
    </ScrollView>

</ContentPage>